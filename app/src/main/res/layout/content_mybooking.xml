<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/textView_upcoming"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="0.75"
                android:gravity="center"
                android:background="@drawable/cell_shape"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:text="UPCOMING"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_past"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/cell_shape"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:text="PAST"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

            <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
       android:background="@drawable/mappointerwithbusicon"
        android:contentDescription=""
                android:layout_below="@+id/tableLayout2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="92dp" />

            </RelativeLayout>

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK NOW"
        android:textSize="20dp"
        android:textColor="#3399ff"
        android:id="@+id/textView_booknow"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Rides Booked"
        android:id="@+id/textView_ride"
        android:textSize="18dp"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/textView_booknow"
        android:layout_centerHorizontal="true" />

</RelativeLayout>