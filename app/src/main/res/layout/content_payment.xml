<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hopop.hopop.payment.activity.PaymentActivity"
    tools:showIn="@layout/app_bar_payment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/textView_justme"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="14dp"
                        android:text="Just Me"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_justme1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="14dp"
                        android:text="+1"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_justme2"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="14dp"
                        android:text="+2"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_justme3"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="14dp"
                        android:text="+3"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </TableRow>


            </TableLayout>

            <View
                android:id="@+id/divider1"
                style="@style/Divider"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tableLayout"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp" />

            <TableLayout
                android:id="@+id/tableLayout01"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:layout_below="@+id/divider1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TableRow>

                    <TextView
                        android:id="@+id/textView_Seats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="6dp"
                        android:text="Seats"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/textView_Balance"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="6dp"
                        android:text="My Wallet Balance"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                </TableRow>

                <TableRow>


                    <TextView
                        android:id="@+id/textView_NumofSeats"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="6dp"
                        android:text="01"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_BalanceAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="6dp"
                        android:textAlignment="center"

                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                </TableRow>

            </TableLayout>

            <View
                android:id="@+id/divider2"
                style="@style/Divider"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tableLayout01"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp" />

            <TableLayout
                android:id="@+id/tableLayout02"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:layout_below="@+id/divider2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TableRow>

                    <TextView
                        android:id="@+id/textView_rideshare"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingTop="6dp"
                        android:text="Ride Fare"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="12sp"
                        android:textStyle="italic" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textView_rideshareCalc"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="6dp"
                        android:text="01X30"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_rideshareAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="6dp"
                        android:text="30Rs"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                </TableRow>
            </TableLayout>

            <View
                android:id="@+id/divider3"
                style="@style/Divider"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tableLayout02"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp" />

            <Button
                android:id="@+id/button_Pay"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:layout_below="@+id/divider3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/mybtn"
                android:text="PAY"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Having Co-Passenger?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="italic"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>